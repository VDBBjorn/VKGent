@if (Request.IsAuthenticated) {
    <div style="padding:0">
        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @style = "margin:0" })) {
            @Html.AntiForgeryToken()
            <ul class="nav pull-right" id="main-menu-right">
                <li>
                    
                    <a href="javascript:document.getElementById('logoutForm').submit()" title="Afmelden"><img src="~/Images/logoff.fw.png" style="padding-right:5px"/>@User.Identity.Name</a>
                </li>
            </ul>
        }
    </div>
} else {
    <ul class="nav pull-right" id="main-menu-right">
        <li>
            <a href="@(Url.Action("Login", "Account"))">Inloggen</a>
        </li>
    </ul>
}
