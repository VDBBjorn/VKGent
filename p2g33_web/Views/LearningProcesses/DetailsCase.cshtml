@model p2g33_web.Models.ViewModels.DetailsCaseViewModel 

@{
    ViewBag.Title = Model.Title;
}

<h2>Details casus: @Model.Title</h2>
<div class="alert alert-info">
    Aan de hand van volgende voorbeeldcasus kunt u overwegen welke handelingen u zou stellen in de gegeven situatie.
    <br />
    U kunt op geregelde tijdstippen feedback raadplegen die richtinggevend kan zijn.
</div>
<table class="table table-bordered table-striped">
    <tr>
        <th scope="row">@Html.DisplayNameFor(t => t.Description)</th>
        <td>@Html.DisplayFor(t => t.Description)</td>
    </tr>
    <tr>
        <th scope="row">@Html.DisplayNameFor(t => t.AvailableFrom)</th>
        <td>@Html.DisplayFor(t => t.AvailableFrom)</td>
    </tr>
    <tr>
        <th scope="row">@Html.DisplayNameFor(t => t.AvailableUntil)</th>
        <td>@Html.DisplayFor(t => t.AvailableUntil)</td>
    </tr>
    <tr>
        <th scope="row">@Html.DisplayNameFor(t => t.Status)</th>
        <td>@Html.DisplayFor(t => t.Status)</td>
    </tr>
    <tr>
        <th scope="row">@Html.DisplayNameFor(t => t.Situation)</th>
        <td>@Html.DisplayFor(t => t.Situation)</td>
    </tr>
    <tr>
        <td colspan="2">
            <div class="text-center"><iframe width="420" height="315" src="http://www.youtube.com/embed/OZHDRE5OMsU" frameborder="0" allowfullscreen></iframe></div>
        </td>
    </tr>
</table>
@using (Html.BeginForm("PlayCase", "Element", FormMethod.Post))
{
    @Html.HiddenFor(t => t.ElementId)
    @Html.HiddenFor(t => t.LearningProcessCode)
    <p style="text-align: right">
        <input type="submit" class="btn btn-primary" value="Verder"/>
    </p>
}

